{
    "name": "bigfoot/bigfoot",
    "license": "MIT",
    "type": "project",
    "description": "Bigfoot, a BackOffice based on Symfony2",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "minimum-stability": "dev",
    "require": {
        "php":                                  ">=5.3.3",
        "symfony/symfony":                      "2.3.*",
        "doctrine/orm":                         ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle":             "1.2.*",
        "twig/extensions":                      "1.0.*",
        "symfony/assetic-bundle":               "2.3.*",
        "symfony/swiftmailer-bundle":           "~2.3",
        "symfony/monolog-bundle":               "2.3.*",
        "sensio/distribution-bundle":           "2.3.*",
        "sensio/framework-extra-bundle":        "2.3.*",
        "sensio/generator-bundle":              "2.3.*",
        "incenteev/composer-parameter-handler": "~2.0",
        "bigfoot/core-bundle":                  "~2.0",
        "bigfoot/user-bundle":                  "~2.0",
        "bigfoot/seo-bundle":                   "~2.0",
        "bigfoot/import-bundle":                "~2.0",
        "bigfoot/media-bundle":                 "~2.0",
        "bigfoot/context-bundle":               "~2.0",
        "bigfoot/navigation-bundle":            "~2.0",
        "bigfoot/content-bundle":               "~2.0",
        "doctrine/doctrine-fixtures-bundle":    "dev-master",
        "doctrine/data-fixtures":               "dev-master",
        "jms/twig-js":                          "dev-master",
        "jms/twig-js-bundle":                   "dev-master",
        "gedmo/doctrine-extensions":            "dev-master"
    },
    "require-dev": {
        "atoum/atoum":                          "dev-master",
        "atoum/atoum-bundle":                   "dev-master",
        "behat/behat": "2.5.0",
        "behat/mink": "1.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "oodle/krumo-bundle": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::buildBootstrap",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::clearCache",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::installAssets",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::buildBootstrap",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::clearCache",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::installAssets",
            "Bigfoot\\Bundle\\CoreBundle\\Composer\\BigfootScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
